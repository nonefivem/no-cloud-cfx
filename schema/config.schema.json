{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "config.schema.json",
  "title": "Cloud Config",
  "description": "Configuration schema for no-cloud-cfx uploads",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "enable_client_uploads": {
      "type": "boolean",
      "description": "Enable or disable client-side uploads",
      "default": true
    },
    "enable_cross_nui_uploads": {
      "type": "boolean",
      "description": "Enable or disable cross-NUI uploads",
      "default": true
    },
    "max_upload_size_mb": {
      "type": "number",
      "description": "Maximum upload file size in megabytes",
      "minimum": 1,
      "default": 50
    },
    "client_upload_rate_limit_per_minute": {
      "type": "integer",
      "description": "Maximum number of client uploads allowed per minute",
      "minimum": 1,
      "default": 20
    },
    "allowed_file_types": {
      "type": "array",
      "description": "List of allowed MIME types for uploads",
      "items": {
        "type": "string",
        "pattern": "^[a-z]+/[a-z0-9.+-]+$"
      },
      "default": ["image/png", "image/jpeg", "image/gif"]
    },
    "logging": {
      "type": "object",
      "description": "Logging configuration",
      "properties": {
        "level": {
          "type": "string",
          "description": "Log level",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "log_to_file": {
          "type": "boolean",
          "description": "Whether to write logs to a file",
          "default": true
        },
        "log_file_path": {
          "type": "string",
          "description": "Path to the log file",
          "default": "logs/cloud_uploads.log"
        }
      },
      "required": ["level", "log_to_file", "log_file_path"],
      "additionalProperties": false
    },
    "rate_limit": {
      "type": "object",
      "description": "Rate limiting configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether rate limiting is enabled",
          "default": true
        },
        "client_uploads_per_minute": {
          "type": "integer",
          "description": "Maximum number of uploads per minute per client",
          "minimum": 1,
          "default": 10
        },
        "client_identifier_type": {
          "type": "string",
          "description": "Client identifier type for rate limiting",
          "enum": ["ip", "license", "ip:license"],
          "default": "ip:license"
        }
      },
      "required": ["enabled", "client_uploads_per_minute", "client_identifier_type"],
      "additionalProperties": false
    }
  },
  "required": [
    "enable_client_uploads",
    "enable_cross_nui_uploads",
    "max_upload_size_mb",
    "client_upload_rate_limit_per_minute",
    "allowed_file_types",
    "logging",
    "rate_limit"
  ],
  "additionalProperties": false
}
